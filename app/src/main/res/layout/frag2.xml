<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/settext"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="255dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="@string/car_number"
        android:inputType="text"
        android:lines="1"
        android:minLines="1"
        android:scrollHorizontally="true"
        android:textAlignment="gravity"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textSize="22sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentnum"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settext"
        app:theme="@style/Widget.AppCompat.Light.AutoCompleteTextView" />

    <Button
        android:id="@+id/setbutton"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="130dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@android:color/background_light"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settext" />

    <Button
        android:id="@+id/reset"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="130dp"
        android:background="@color/colorPrimary"
        android:text="@string/reset"
        android:textColor="@android:color/background_light"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintLeft_toRightOf="@+id/setbutton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settext" />
</android.support.constraint.ConstraintLayout>